<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10sp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:contentPadding="10dp"
    app:cardCornerRadius="10dp">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:src="@drawable/exit_btn"
        android:background="#ffffff"
        android:id="@+id/Close_Program_BTN"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/Full_Program_Headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Program Headline"
            android:textAlignment="center"
            android:textColorLink="@color/cardview_shadow_end_color"
            android:textSize="25sp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="300sp">

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/full_training_program_drills"/>
        </ScrollView>
    </LinearLayout>
</android.support.v7.widget.CardView>